    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: User Interface",
            "type": "python",
            "request": "launch",
            // always launch main.py
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        
        {
            "name": "Python: Analysis",
            "type": "python",
            "request": "launch",
            "program": "analyzer.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        
        {
            "name": "Python: CLI",
            "type": "python",
            "request": "launch",
            "program": "cli_main.py",
            "args": [
                " dataSamples/sarah_pc",
                "-g=1",
                "-c=5",
                "-s=2000",
                "-a"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}